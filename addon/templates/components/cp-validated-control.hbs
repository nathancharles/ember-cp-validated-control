{{yield
  (hash
    isErrorVisible=this.showError
    isWarningVisible=this.showWarning
    isValidationVisible=this.isValidationVisible
    ariaDescribedby=this.ariaDescribedby
    ariaInvalid=this.showError)
}}


{{#if this.showError}}
  <div class={{this.errorClassName}} id={{this.ariaDescribedby}} aria-live="polite" data-test-error-message>
    {{this.validations.error.message}}
  </div>
{{else if this.showWarning}}
  <div class={{this.warningClassName}} id={{this.ariaDescribedby}} aria-live="polite" data-test-warning-message>
    {{this.validations.warning.message}}
  </div>
{{/if}}
